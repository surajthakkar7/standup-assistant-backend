# Server
PORT=4000
NODE_ENV=development

# Database
# Example (Mongo Atlas): mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/standup_assistant?retryWrites=true&w=majority&appName=<appName>
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/standup_assistant?retryWrites=true&w=majority&appName=<appName>

# Auth
JWT_SECRET=change-me-please

# === AI config ===
AI_ENABLED=true          # set false to disable AI endpoints
AI_MOCK=false            # set true to return mock AI responses
AI_PROVIDER=gemini       # one of: groq | gemini | ollama
AI_MODEL=gemini-1.5-pro  # model name per provider

# Provider keys (fill the one(s) you use)
OPENAI_API_KEY=
GROQ_API_KEY=
GEMINI_API_KEY=
OLLAMA_HOST=http://127.0.0.1:11434
